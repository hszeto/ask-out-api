<div class="main-bg">
  <div class="container">
    <div class="reg-wrapper">
      <h2 class="text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true, :placeholder=> "Email" %>

          <%= f.text_field :name, :placeholder=> "Your name" %>

          <%= f.text_field :display_name, :placeholder=> "Nickname" %>

          <%= f.telephone_field :phone, :placeholder=> "Phone number" %>

          <%# if @minimum_password_length %>
          <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
          <%# end %><br />
          <%= f.password_field :password, autocomplete: "off", :placeholder=> "Password. 6 characters minimum" %>

          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=> "Confirm password" %>
        <br>
        <div class="actions pull-right">
          <%= f.submit "Sign up", :class=>"btn btn-outline-primary" %>
        </div>
      <% end %>

      <div class="foot-note">
        Already registered? <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>